<div class = "row">
	<div class = "large-12 small-12 columns">
		<%= form_for @post do |p| %>
			<label>
				Title
				<%= p.text_field :title, placeholder: 'Post Title' %>
			</label>
			<label>
				Body
				<%= p.text_area :body, placeholder: 'Lorem ipsum...' %>
			</label>
			<%= p.submit 'Save Post', class:'button' %>
		<% end %>
	</div>
</div>